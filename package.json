{
	"name": "true-clear-terminal",
	"displayName": "True Clear Terminal",
	"description": "Clear terminal output and scrollback buffer",
	"version": "1.0.4",
	"license": "MIT",
	"publisher": "mohammadalshikh",
	"repository": {
		"type": "git",
		"url": "https://github.com/mohammadalshikh/true-clear-terminal-vscode.git"
	},
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.102.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:trueClearTerminal.clear",
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "trueClearTerminal.clear",
				"title": "True Clear Terminal"
			},
			{
				"command": "trueClearTerminal.toggle",
				"title": "True Clear Terminal: Enable/Disable Skip Shell "
			}
		],
		"keybindings": [
			{
				"command": "trueClearTerminal.clear",
				"key": "ctrl+k",
				"mac": "cmd+k",
				"when": "terminalFocusInAny"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/sinon": "^17.0.3",
		"@types/vscode": "^1.102.0",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"esbuild": "^0.25.3",
		"eslint": "^9.25.1",
		"glob": "^11.0.0",
		"mocha": "^10.8.2",
		"npm-run-all": "^4.1.5",
		"sinon": "^19.0.2",
		"typescript": "^5.8.3",
		"vsce": "^2.15.0"
	}
}